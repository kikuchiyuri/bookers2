<h2>User info</h2>

<% if @user.errors.any? %>
  <h3>
    <%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:
  </h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <div>
    <label for ="user_name">Name</label>
    <%= f.text_field :name, autofocus: true, id: "user_name" %>
    <label for ="user_image">Image</label>
    <%= f.file_field :profile_image, accept: "image/*" %>
    <label for ="user_introduction">Introduction</label>
    <%= f.text_area :introduction, id: "user_introduction" %>
    <%= f.submit "Update User" %>
  </div>
<% end %>